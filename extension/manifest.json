{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "Ao3 Chrome Extension",
  "description": "This extension will help you track your fanfics.",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://archiveofourown.org/works/*"],
      "exclude_matches": ["https://archiveofourown.org/works/search"],
      "css": ["assets/styles/content-script.css"],
      "js": ["js/content-script.js"]
    }
  ],
  "background": {
    "service_worker": "js/service-script.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/images/bookmark.svg"],
      "matches": ["https://archiveofourown.org/*"]
    }
  ]
}
